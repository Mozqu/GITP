<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_tag("/users/create") do %>
          <input name="name" value="<%= @user.name %>" placeholder="User Name">
          <input name="email" value="<%= @user.email %>" placeholder="Email">
          <input type="password" name="password" value="<%= @user.password %>" placeholder="Passward">
          <input type="submit" value="Register">
        <% end %>
      </div>
    </div>
  </div>
</div>
