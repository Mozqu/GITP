

  <% @posts.each do |post|%>
  <div class="post-container">
    <div class="post-top">
      <%= link_to("/users/#{post.user_id}",{class: "user-image-link"}) do %>
      <img class="user-image" src="<%= "/user_images/#{post.user.image_name}" %>">
      <% end %>
      <p><%= link_to("#{post.user.name}", "/users/#{post.user_id}") %> </p>
      <p1><%= post.created_at %></p1>
    </div>
    <div class="post-images-test">
      <% if post.image_name1 %>
      <img src="<%= "/post_images/#{post.image_name1}" %>">
      <% end %>
      <% if post.image_name2 %>
      <img src="<%= "/post_images/#{post.image_name2}" %>">
      <% end %>
      <% if post.image_name3 %>
      <img src="<%= "/post_images/#{post.image_name3}" %>">
      <% end %>
      <% if post.image_name4 %>
      <img src="<%= "/post_images/#{post.image_name4}" %>">
      <% end %>
    </div>
    <div class="post-sentence">
      <p><%= post.content %></p>
    </div>
    <div class="post-bottom">
      <span class="fa fa-heart"></span>
      <span class="fa fa-comment"></span>
    </div>
  </div>
  <% end %>

<script>
var $grid = jQuery('.show-center').imagesLoaded(function(){
 $grid.masonry({
   itemSelector: '.post-container'
 });
});
</script>
