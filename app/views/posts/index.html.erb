
<div id="show-center">

<% @posts.each do |post| %>
<div class="post-item">
  <!--<%= link_to("/posts/#{post.id}") do %>-->
  <div class="post-top">
    <object>
      <%= link_to("/users/#{post.user_id}",{class: "user-image-link"}) do %>
      <img class="user-image" src="<%= "/user_images/#{post.user.image_name}" %>">
      <% end %>
    </object>
    <object><p><%= link_to("#{post.user.name}", "/users/#{post.user_id}") %> </p></object>
  </div>

  <div class="post-images">
    <% if post.image_name1 %>
    <img src="<%= "/post_images/#{post.image_name1}" %>">
    <% end %>
    <% if post.image_name2 %>
    <img src="<%= "/post_images/#{post.image_name2}" %>">
    <% end %>
    <% if post.image_name3 %>
    <img src="<%= "/post_images/#{post.image_name3}" %>">
    <% end %>
    <% if post.image_name4 %>
    <img src="<%= "/post_images/#{post.image_name4}" %>">
    <% end %>
  </div>

  <div class="post-sentence">
    <p1><%= post.created_at %></p1>
    <p><%= post.content %></p>
  </div>
  <div class="post-bottom">

    <% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
      <%= link_to("/likes/#{post.id}/destroy", {method: "post"}) do %>
        <span id="like-btn-unlike" class="fa fa-heart"><%= post.likes_count %></span>
      <% end %>
    <% else %>
      <%= link_to("/likes/#{post.id}/create", {method: "post"}) do %>
        <span id="like-btn" class="fa fa-heart"><%= post.likes_count %></span>
      <% end %>
    <% end %>

    <span class="fa fa-comment"></span>
  </div>
  <!--<% end %>-->
</div>
<% end %>

</div>
